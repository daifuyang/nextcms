// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 低代码页面存储
model cmsPage {
  id          Int       @id @default(autoincrement()) @map(name: "id")
  title       String    @map(name: "title") @db.VarChar(50)
  description String?   @map(name: "description") @db.VarChar(200)
  filePath    String?   @map(name: "file_path") @db.VarChar(255)
  type        String    @default("page") @map(name: "type") @db.VarChar(10) // page article product header footer
  version     Int       @map(name: "version")
  createId    Int       @map(name: "create_id")
  creator     String    @map(name: "creator") @db.VarChar(50)
  updateId    Int       @map(name: "update_id")
  updater     String    @map(name: "updater") @db.VarChar(50)
  createdAt   DateTime  @default(now()) @map(name: "created_at")
  updatedAt   DateTime  @updatedAt @map(name: "updated_at")
  deletedAt   DateTime? @map(name: "deleted_at")

  @@map("cms_page")
}

// 页面版本日志表
model cmsPageLog {
  id          Int      @id @default(autoincrement()) @map(name: "id")
  title       String   @map(name: "title") @db.VarChar(50)
  description String?  @map(name: "description") @db.VarChar(200)
  filePath    String?  @map(name: "file_path") @db.VarChar(255)
  type        String   @default("page") @map(name: "type") @db.VarChar(10) // page article product header footer
  version     Int      @map(name: "version")
  createId    Int      @map(name: "create_id")
  creator     String   @map(name: "creator") @db.VarChar(50)
  createdAt   DateTime @default(now()) @map(name: "created_at")

  @@map("cms_pagelog")
}

// 导航关联页面
model cmsNav {
  id          Int       @id @default(autoincrement()) @map(name: "id")
  title       String    @map(name: "title") @db.VarChar(50)
  description String?   @map(name: "description") @db.VarChar(200)
  createId    Int       @map(name: "create_id")
  creator     String    @map(name: "creator") @db.VarChar(200)
  updateId    Int       @map(name: "update_id")
  updater     String    @map(name: "updater") @db.VarChar(50)
  createdAt   DateTime  @default(now()) @map(name: "created_at")
  updatedAt   DateTime  @updatedAt @map(name: "updated_at")
  deletedAt   DateTime? @map(name: "deleted_at")

  @@map("cms_nav")
}

// 导航关联子页面
model cmsNavItem {
  id          Int       @id @default(autoincrement()) @map(name: "id")
  navId       Int       @map(name: "nav_id")
  pageId      Int       @map(name: "page_id")
  title       String    @map(name: "title") @db.VarChar(50)
  description String?   @map(name: "description") @db.VarChar(200)
  icon        String?   @map(name: "icon") @db.VarChar(255)
  order       Int       @map(name: "order")
  isLink      Boolean   @map(name: "is_link")
  createId    Int       @map(name: "create_id")
  creator     String    @map(name: "creator") @db.VarChar(50)
  updateId    Int       @map(name: "update_id")
  updater     String    @map(name: "updater") @db.VarChar(50)
  createdAt   DateTime  @default(now()) @map(name: "created_at")
  updatedAt   DateTime  @updatedAt @map(name: "updated_at")
  deletedAt   DateTime? @map(name: "deleted_at")

  @@map("cms_navitem")
}

// 定义用户模型
model cmsUser {
  id            Int       @id @default(autoincrement())
  userType      Int       @default(0) @db.TinyInt() // 默认值为0，表示前台用户
  loginName     String    @unique
  nickname      String?   @db.VarChar(50)
  realname      String?   @db.VarChar(50)
  password      String?   @db.VarChar(100)
  phoneNumber   String?   @unique
  email         String?   @unique
  gender        Int?      @db.TinyInt()
  avatar        String?   @db.VarChar(255)
  lastLoginIp   String?   @db.VarChar(128)
  lastLoginTime DateTime?
  remark        String?   @db.VarChar(255)
  createId      Int
  creator       String    @db.VarChar(50)
  updateId      Int
  updater       String    @db.VarChar(50)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  @@map("cms_user")
}

// 定义用户token关联表
model cmsUserToken {
  id           Int      @id @default(autoincrement())
  userId       Int
  accessToken  String   @db.VarChar(255)
  refreshToken String   @db.VarChar(255)
  expiry       DateTime
  createdAt    DateTime @default(now())

  @@map("cms_user_token")
}

// 定义用户角色模型
model cmsUserRole {
  id          Int       @id @default(autoincrement())
  name        String    @unique // 角色名称，唯一
  description String?   @db.VarChar(200) // 角色描述
  createId    Int
  creator     String    @db.VarChar(50)
  updateId    Int
  updater     String    @db.VarChar(50)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  @@map("cms_user_role")
}

// 定义角色和用户关联关系模型
model cmsUserRoleRelation {
  id     Int @id @default(autoincrement())
  userId Int // 用户ID
  roleId Int // 角色ID

  @@map("cms_user_role_relation")
}

// 定义资源文件模型
model cmsResource {
  id        Int       @id @default(autoincrement())
  categryId Int       @default(0)
  name      String    @db.VarChar(50)
  filePath  String    @db.VarChar(255) // 资源文件路径
  md5       String?   @db.VarChar(32) // 资源文件的 MD5 值
  sha1      String?   @db.VarChar(40) // 资源文件的 SHA1 值
  fileType  String    @db.VarChar(10) // 资源文件类型，可以是图片、音频、视频等
  createId  Int
  creator   String    @db.VarChar(50)
  updateId  Int
  updater   String    @db.VarChar(50)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@map("cms_resource")
}

// 定义资源分类模型
model cmsResourceCategory {
  id          Int       @id @default(autoincrement())
  name        String    @unique // 分类名称，唯一
  description String?   @db.VarChar(200) // 分类描述
  parentId    Int? // 父级分类ID，用于表示分类的层级结构
  createId    Int
  creator     String    @db.VarChar(50)
  updateId    Int
  updater     String    @db.VarChar(50)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  @@map("cms_resource_category")
}

// 文章表
model cmsArticle {
  id             Int       @id @default(autoincrement())
  postFormat     Int       @db.TinyInt() // 文章格式
  seoTitle       String?   @db.VarChar(100) // 三要素标题，用于seo优化
  seoKeywords    String?   @db.VarChar(255) // 三要素关键词，用于seo优化
  seoDescription String?   @db.VarChar(255) // 三要素描述，用于seo优化
  thumbnail      String?   @db.VarChar(255) // 封面
  title          String    @db.VarChar(100) // 标题
  content        String?   @db.LongText // 内容
  keywords       String?   @db.VarChar(255) // 关键词
  excerpt        String?   @db.VarChar(255) // 摘要
  source         String?   @db.VarChar(255) // 文章来源
  isTop          Int       @db.TinyInt() // 置顶
  hits           Int // 点击数
  favorites      Int // 收藏数
  Like           Int // 点赞数
  Comment        Int // 点赞数
  more           Json?     @db.Json // 扩展属性
  articleStatus  Boolean   @default(true) // 文章状态
  commentStatus  Boolean   @default(true) // 评论状态
  order          Int? // 排序
  createId       Int
  creator        String    @db.VarChar(50)
  updateId       Int
  updater        String    @db.VarChar(50)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?

  @@map("cms_article")
}

// 文章分类
model cmsArticleCategory {
  id             Int       @id @default(autoincrement())
  parentId       Int // 分类id
  seoTitle       String?   @db.VarChar(100) // 三要素标题，用于seo优化
  seoKeywords    String?   @db.VarChar(255) // 三要素关键词，用于seo优化
  seoDescription String?   @db.VarChar(255) // 三要素描述，用于seo优化
  name           String    @db.VarChar(100)
  icon           String?   @db.VarChar(255) // 分类图标 
  description    String?   @db.VarChar(255)
  status         Int?       @default(1) @db.TinyInt()
  count          Int // 文章数
  path           String    @db.VarChar(255)
  order          Int? // 排序
  createId       Int
  creator        String    @db.VarChar(50)
  updateId       Int
  updater        String    @db.VarChar(50)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?

  @@map("cms_article_category")
}

// 文章和分类关联表
model cmsArticleCategoryPost {
  id         Int  @id @default(autoincrement())
  postId     Int // 文章id
  categoryId Int //分类id
  order      Int? // 排序

  @@map("cms_article_category_post")
}
